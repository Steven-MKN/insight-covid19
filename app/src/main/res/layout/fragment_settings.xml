<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="45dp">

            <TextView
                android:id="@+id/text_view_more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="For official stats, information about coronavirus, symptoms and prevention, please visist:" />

            <LinearLayout
                android:id="@+id/layout_web_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_more_info"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_who_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="who.int"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button_sacoronavirus_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="SA Coronavirus"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_chat_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_web_links"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="or chat to the National Department of Health on:" />

            <Button
                android:id="@+id/button_sacoronavirus_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_chat_to"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:background="@color/colorPrimary"
                android:text="060 012 3456"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorPrimary"
            android:text="Privacy Policy"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Notifications"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>